<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp">

    <View
        android:id="@+id/view_separator_sk"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_global_low"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_episode_sk"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_marginTop="16dp"
        android:background="@color/skeleton_color"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ImageViewWithRoundedCorners8dp" />

    <TextView
        android:id="@+id/tv_episode_title_sk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:background="@color/skeleton_color"
        android:text="لماذا نتوقف شهرين قبل كأس العالم؟"
        android:textAlignment="viewStart"
        android:textColor="@color/skeleton_color"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/img_episode_sk"
        app:layout_constraintTop_toTopOf="@id/img_episode_sk" />

    <TextView
        android:id="@+id/tv_podcast_title_sk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/skeleton_color"
        android:text="مرتدة"
        android:textAlignment="viewStart"
        android:textColor="@color/skeleton_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_episode_title_sk"
        app:layout_constraintTop_toBottomOf="@id/tv_episode_title_sk" />

    <TextView
        android:id="@+id/tv_release_date_and_duration_sk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/skeleton_color"
        android:text="اكتوبر 2020 . 23 دقيقة"
        android:textColor="@color/skeleton_color"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_episode_title_sk"
        app:layout_constraintTop_toBottomOf="@id/tv_podcast_title_sk" />


</androidx.constraintlayout.widget.ConstraintLayout>